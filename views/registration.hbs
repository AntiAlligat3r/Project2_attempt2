<div class="container">
    <form action="/register" method="post" class="form flex-column flex-center">
        <div class="formBody">
            <div class="header flex-center flex-column">
                <h1>Register</h1>
            </div>
            <div class="inputBody">
                <div>
                    <label for="username">username:</label>
                    <input type="text" name="username" id="username" class="textBoxes">
                    <small class="smallUsername"></small>  
                </div> 
                <div>
                    <label for="email">email:</label>
                    <input type="text" name="email" id="email" class="textBoxes">
                    <small class="smallEmail"></small>  
                </div>      
                <div>
                    <label for="password">password:</label>
                    <input type="password" name="password" id="password" class="textBoxes">
                    <small class="smallPassword"></small>
                </div>
                <div>
                    <label for="confpassword">Confirm password:</label>
                    <input type="confpassword" name="confpassword" id="confpassword" class="textBoxes">
                    <small class="smallConfPassword"></small>
                </div>
            </div>
            <div class="footer flex-center flex-column">
                <div class ="valBody" hidden = true>
                    <p id="valemail" class="invalconditions" hidden = true>Please enter a valid email</p>
                    <p id="valpass" class="invalconditions" hidden = true>Passwords don't match</p>
                </div>
                <h3>Password must contain the following:</h3>
                <div class ="conBody">
                    <p id="letter" class="conditions">A <b>lowercase</b> letter</p>
                    <p id="capital" class="conditions">A <b>capital (uppercase)</b> letter</p>
                    <p id="number" class="conditions">A <b>number</b></p>
                    <p id="passlength" class="conditions">Minimum <b>8 characters</b></p>
                </div>
            </div>
        </div>
        <input type="submit" name="register" id="register" value="Register">
    </form>
</div>
<script src="../js/registerCheck.js"></script>
